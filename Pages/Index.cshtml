@page
@model IndexModel
@{
    ViewData["Title"] = "Meu Portfólio";
}

<!-- Hero Section -->
<section class="hero-section bg-dark text-white text-center py-5" id="mainContent">
    <div class="container py-5">
        <img src="/images/profile.jpg" alt="Minha Foto" class="rounded-circle mb-4" width="150" height="150">
        <h1 class="display-4">Olá, eu sou <span class="text-primary">[Seu Nome]</span></h1>
        <p class="lead">Desenvolvedor Full Stack | Especialista em ASP.NET Core</p>
        <div class="social-icons mt-4">
            <a href="#" class="text-white mx-2"><i class="fab fa-github fa-2x"></i></a>
            <a href="#" class="text-white mx-2"><i class="fab fa-linkedin fa-2x"></i></a>
            <a href="#" class="text-white mx-2"><i class="fab fa-twitter fa-2x"></i></a>
        </div>
    </div>
</section>

<div style="width: 100%; height: 100vh; display: flex; justify-content: center; align-items: center;">
    <pre id="donut" style="
            font-family: 'Courier New', monospace;
            font-size: 1.2vmin;
            line-height: 1;
            margin:0;
            padding:0;
            letter-spacing: 1.5px;
            white-space: pre;
            text-align: center;
            overflow: visible;
            max-width: 100%;
            background: linear-gradient(135deg, #ff69b4 0%, #ff1493 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            filter: drop-shadow(0 0 5px rgba(255,105,180,0.5));
        ">@Model.DonutFrame</pre>
</div>


<script>
        function updateDonut() {
        fetch(`?handler=DonutFrame&t=${Date.now()}`)
            .then(r => r.json())
            .then(frame => {
                document.getElementById('donut').textContent = frame;
                setTimeout(updateDonut, 50);
            });
    }
    document.addEventListener('DOMContentLoaded', updateDonut);
</script>
