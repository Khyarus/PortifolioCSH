@page
@model IndexModel
@{
    ViewData["Title"] = "Meu Portfólio";
}

<!-- Hero Section -->
<section class="hero-section bg-dark text-white text-center py-5" id="mainContent">
    <div class="container py-5">
        <img src="/images/profile.jpg" alt="Minha Foto" class="rounded-circle mb-4" width="150" height="150">
        <h1 class="display-4">Olá, eu sou <span class="text-primary">[Seu Nome]</span></h1>
        <p class="lead">Desenvolvedor Full Stack | Especialista em ASP.NET Core</p>
        <div class="social-icons mt-4">
            <a href="#" class="text-white mx-2"><i class="fab fa-github fa-2x"></i></a>
            <a href="#" class="text-white mx-2"><i class="fab fa-linkedin fa-2x"></i></a>
            <a href="#" class="text-white mx-2"><i class="fab fa-twitter fa-2x"></i></a>
        </div>
    </div>
</section>

<!-- Seção do Jogo -->
<section class="game-section py-5 bg-light" id="gameSection">
    <div class="container text-center">
        <h2 class="mb-4">Joguinho do Desenvolvedor</h2>
        <p class="mb-4">Tente não deixar o bichinho pegar seu cursor!</p>
        
        <div id="gameArea" class="game-area">
            <div id="creature" class="creature">👾</div>
            <div id="cursor" class="cursor">🖱️</div>
        </div>
        
        <div class="mt-4">
            <p id="score">Tempo sobrevivendo: <span>0</span> segundos</p>
            <button id="startGame" class="btn btn-primary">Começar Jogo</button>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/site.js" asp-append-version="true"></script>
}